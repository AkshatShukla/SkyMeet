<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="3dp"
        card_view:cardUseCompatPadding="false"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/li_photo_block_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/prof_pic_block_view"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/emp_details_block_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/li_photo_block_view"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="MB chandak"
                    android:textColor="#000000"
                    android:textSize="16sp"/>



                <TextView
                    android:id="@+id/designation_block_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp"
                    android:text="HOD"
                    android:textColor="#424242"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginStart="16dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:id="@+id/li_block_status"
                    android:orientation="horizontal"
                    android:layout_marginEnd="36dp"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>